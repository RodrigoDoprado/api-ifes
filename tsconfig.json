{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": [
			"es6",
			"ES2018"
		],
		"types": ["node"],
		"allowJs": true,
		"outDir": "./build",
		"rootDir": "./src",
		// "tsconfigRootDir": "jest.config.ts",
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipDefaultLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"src/**/**/**/*",
		"src/entity/.ts"	
	],
	"exclude": [
		"node_modules",
		"build",
	],
	"ts-node": {
		"files": true,
	}
}